<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="NGワードゲーム" />
    
    <StackLayout class="p-4">
        <Label text="NGワードゲーム" class="text-2xl font-bold text-center mb-4" />
        
        <StackLayout class="form space-y-4">
            <Label text="プレイヤー名" class="text-lg" />
            <TextField text="{{ playerName }}" hint="名前を入力" class="input p-2 border rounded" />
            
            <Label text="合言葉" class="text-lg" />
            <TextField text="{{ passphrase }}" hint="4-10文字の英数字" class="input p-2 border rounded" />
            
            <Button text="ルームを作成" tap="{{ createRoom }}" class="btn btn-primary p-3 rounded" />
            <Button text="ルームに参加" tap="{{ joinRoom }}" class="btn btn-secondary p-3 rounded" />
        </StackLayout>
    </StackLayout>
</Page>